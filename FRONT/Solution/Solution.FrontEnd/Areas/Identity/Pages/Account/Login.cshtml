@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="layout-default layout-login-centered-boxed">
    <div class="layout-login-centered-boxed__form card">
        <div class="d-flex flex-column justify-content-center align-items-center mt-2 navbar-light">
            <a class="navbar-brand flex-column mb-2 align-items-center mr-0" style="min-width: 0">
                Iniciar sesión
            </a>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="text-label" asp-for="Input.Email">Correo electrónico:</label>
                <div class="input-group input-group-merge">
                    <input class="form-control form-control-prepended" placeholder="john@doe.com" asp-for="Input.Email">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <span class="far fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-label" asp-for="Input.Password">Contraseña:</label>
                <div class="input-group input-group-merge">
                    <input asp-for="Input.Password" class="form-control form-control-prepended" placeholder="Ingrese su Contraseña">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <span class="fa fa-key"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-block btn-primary" type="submit">Iniciar sesión</button>
            </div>

            <div class="form-group text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="Input.Recordarme">
                    <label class="custom-control-label" asp-for="Input.Recordarme">@Html.DisplayNameFor(m => m.Input.Recordarme)</label>
                </div>
            </div>
            <div class="form-group text-center">
                <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste la contraseña?</a><br>
                ¿Aún no tienes una cuenta?
                <a class="text-body text-underline" asp-page="./Register">¡Regístrate!</a>
            </div>

            <input type="hidden" asp-for="ReturnUrl" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}